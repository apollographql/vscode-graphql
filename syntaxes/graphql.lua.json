{
  "fileTypes": ["lua", "luau"],
  "injectionSelector": "L:source -string -comment",
  "patterns": [
    {
      "contentName": "meta.embedded.block.graphql",
      "begin": "(gql)\\(?\\s*(\\[\\[)",
      "beginCaptures": {
        "1": {
          "name": "entity.name.function.lua"
        },
        "2": {
          "name": "string.quoted.double.lua"
        }
      },
      "end": "(\\]\\])",
      "endCaptures": {
        "1": {
          "name": "string.quoted.double.lua"
        }
      },
      "patterns": [{ "include": "source.graphql" }]
    }
  ],
  "scopeName": "inline.graphql.lua"
}
