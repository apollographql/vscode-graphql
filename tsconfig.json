{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020", "esnext.asynciterable"],
    "types": ["node", "jest"],
    "baseUrl": "."
  },
  "exclude": ["./lib", "jest.config.ts", "**/__e2e__/*"]
}
